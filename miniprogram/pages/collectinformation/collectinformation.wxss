/* miniprogram/pages/recordinformation/recordinformation.wxss */
.card {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  text-align: center;/*水平居中*/
  margin: 0 0;
  background-color: #000000;
}
.addressTitle {/*模块*/
  width: 100%;
  height: 60px;
  background-color: #fff;
  margin-top: 0rpx;
  overflow: hidden;
  display: flex;
}
.addressInfo {
  width: 240px;
}
.addressInfoText{
  font-size: 17px;
  color: #000;
  margin-left: 14px;
  padding: 17px 0 36rpx 0;/*上右下左*/
  width: 220px;
}
.addressInfoTitle {/*左边详细地址*/
  margin-left: 14px;
  margin-right: 14px;
  margin-top: 5px;
  font-size: 15px;
  font-style: normal;
  font-weight: normal;
  position: relative;
  left: 0px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  color: #7f7f7f;
}
.score {
  /*width: 56px;*/
  height: 56px;
  line-height: 56px;
  /*margin-left: 20px;*/
}
.textModul {/*输入框*/
  background-color: #ffffff;
  width: 100%;
  display: flex;
}
.text {/*输入文本框*/
  margin-right: 14px;
  margin-left: 14px;
  width: 100%;
  margin-top: 5px;/*background-color: #5a98b1;*/
}
.collectIcon image {/*图标图片*/
  display: flex;
  width: 28px;
  height: 28px;
}
.collectIcon {/*右边图标模块*/
  display: flex;
  margin: 14px;
  position: absolute;
  right: 5px;
}

.sharerecord {
  display: flex;
  position: relative;
  right: 28px;
  height: 56px;
}
.shareIcon {/*分享按钮样式*/
  height: 56px;
  background-color: #fff;
  padding: 0;
  margin: 0;
  display: flex;
}
.shareIcon image {
  margin-top: 14px;
  margin-bottom: 14px;
  height: 28px;
  width: 28px;
  position: relative;
  right: 0;
}
.goRecord {
  display: flex;
}
.recordIcon {
  height: 56px;
  width: 28px;
  display: flex;
}
.recordIcon image {
  margin-bottom: 14px;
  margin-top: 14px;
  height: 28px;
  width: 28px;
}
.recordwarn {
  line-height: 56px;
  width: 45px;
  font-size: 15px;
  color: #7f7f7f;
}

.grayDivide {/*灰色分割条*/
  height: 100%;
  background-color: #ededed;
  position:relative;
  top: 0px;
}
.newRecord {/*最新打卡灰横栏*/
  background-color: #ededed;
  color: #7f7f7f;
  font-size: 15px;
  line-height: 20px;
  height: 20px;
  width: 100%;
  padding-left: 15px;/*内部间隔*/
}
.userRecord {/*一条最新的记录*/
  margin: 14px;
}
.userInfo {/*用户头像和昵称*/
  display: flex;
  background-color: #ffffff;
}
.userAvatar {/*用户头像*/
  background-color: #ffffff;
  display: flex;
  overflow: hidden;
  width: 42px;
  height: 42px;
  margin-bottom: 10px;
  margin-right: 10px;
  margin-top: 10px;
  border-color: #ffffff;
  border-radius: 50%;
  border: 2px solid #fff;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}
.userAvatar image {
  height: 42px;
  width: 42px;
}
.userNickname {/*用户名称*/
  width: 150px;
  font-size: 15px;
  line-height: 66px;
}
.userRecordDate {
  width: 85px;
  font-size: 15px;
  color: #7f7f7f;
  line-height: 66px;
  position: absolute;
  right: 14px;
}
.userImage {
  display:flex;
  justify-content: center; 
}
.userImage image {
  width: 100%;
}