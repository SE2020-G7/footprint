/* miniprogram/pages/draftboxpage/draftboxpage.wxss */
.title {/*标题*/
  width: 100%;
  height: 40px;
  line-height: 40px;
  /*justify-content: center;
  align-items: center;*/
  text-align: center;
  font-size: 17px;
  color: #000;
  background-color: #fff;
}
.grayDivideline {/*灰色分割线*/
  height: 1px;
  background-color: #ededed;
  width: 100%;
  position:relative;
  top: 0px;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #ffffff;
  min-height: 100vh;
}
.card {
  width: 710rpx;
  border-radius: 20rpx;
  text-align: center;/*水平居中*/
  margin: 20rpx 0;
}
.card-head {
  display: flex;
  flex-direction: row;
  align-items: center;
  
}
.title {
  background-color: #ffffff;
  width: 100%;
  font-style: normal;
  height: 35px;
  line-height: 35px;
}
.address {
  font-size: 30rpx;
  color: #000;
  font-size: 17px;
  margin: 0 10rpx;
}

.card-body image {
  width: 100%;
}
.card-foot {
  font-size: 35rpx;
  text-align: right;
  margin-right: 30px;
}