.recordlistBgpic {
  width: 100%;
  display: flex;
}
.background {
  width: 100%;
  height: 100%;
  position:fixed; 
  /*background-size:100% 100%;*/
  z-index: -1;/*图片置于底层*/
  background: url("http://m.qpic.cn/psc?/V54au59j3fpkzz3KIMzV3ivNbu1pxpr3/ruAMsa53pVQWN7FLK88i5nv1puEj7.Zk66dz*ZXP1qaJtlUTpNXcFzwNcg*e7xqzIXQf*y8XSdJLF56HcMDI34UMawDTNbbb9Dd.3m.EuDc!/b&bo=uAEOAwAAAAABB5Q!&rf=viewer_4");
